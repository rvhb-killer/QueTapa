<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Que Tapa</title> 
    <link rel="stylesheet" href="style.css">
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
</head>
<body>
    <h1>Contact Formulier</h1>
    <form method="post" action="">
        <label for="voornaam">Voornaam*</label>
        <input type="text" name="voornaam" id="voornaam" required>
            <label for="familienaam">Familienaam*</label>
    <input type="text" name="familienaam" id="familienaam" required>

    <label for="email">E-mailadres*</label>
    <input type="email" name="email" id="email" required>
    <span class="error" id="email-error"></span>

    <label for="telefoonnummer">Telefoonnummer</label>
    <input type="tel" name="telefoonnummer" id="telefoonnummer">
    <span class="error" id="tel-error"></span>

    <label for="bericht">Bericht*</label>
    <textarea name="bericht" id="bericht" required></textarea>

    <input type="submit" value="Verzenden">
</form>

<script>
    const emailInput = document.getElementById("email");
    const telInput = document.getElementById("telefoonnummer");
    const emailError = document.getElementById("email-error");
    const telError = document.getElementById("tel-error");

    emailInput.addEventListener("input", () => {
        if (emailInput.validity.valid) {
            emailError.textContent = "";
            emailError.className = "error";
        } else {
            emailError.textContent = "Voer een geldig e-mailadres in";
            emailError.className = "error active";
        }
    });

    telInput.addEventListener("input", () => {
        if (telInput.validity.valid) {
            telError.textContent = "";
            telError.className = "error";
        } else {
            telError.textContent = "Voer een geldig telefoonnummer in";
            telError.className = "error active";
        }
    });
</script>
</body>
</html>
